{
  "manifest_version": 3,
  "name": "Open Tamper",
  "description": "Load remote userscripts and run them on matching pages.",
  "version": "0.1.0",
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "userScripts",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Tamper",
    "default_popup": "popup/popup.html"
  }
}